<!DOCTYPE html>
<html lang="fr">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Company Receipt</title>
    <style>
        * { margin: 0; padding: 0; box-sizing: border-box; }
        body { font-family: Arial, sans-serif; background: #f5f5f5; padding: 20px; display: flex; justify-content: center; align-items: center; min-height: 100vh; flex-direction: column; }
        .receipt { background: white; width: 100%; max-width: 800px; }
        table { width: 100%; border-collapse: collapse; }
        td { border: 2px solid #000; padding: 8px; font-size: 12px; }
        .header-cell { text-align: center; padding: 15px 20px 10px; }
        .header-cell h1 { font-size: 16px; font-weight: bold; margin-bottom: 10px; }
        .company-info-cell { padding: 0 20px 3px 10px; font-size: 12px; }
        .label-cell { font-weight: bold; }
        .amount { font-weight: bold; font-size: 14px; }
        .signature-content { display: flex; justify-content: space-between; align-items: center; padding: 70px 10px 10px; }
        .signature-left, .signature-right { display: flex; gap: 20px; align-items: center; }
        .signature-right { margin-left: auto; }
        @media print {
            body { background-color: white; padding: 0; margin: 0; }
            .receipt { max-width: 100%; page-break-inside: avoid; }
            @page { margin: 10mm; size: A4; }
        }
    </style>
</head>
<body>
    <div class="receipt">
        <table>
            <tr>
                <td colspan="4" class="header-cell" style="border-bottom: none;">
                    <h1>Company Receipt</h1>
                </td>
            </tr>
            <tr>
                <td colspan="4" class="company-info-cell" style="border: none; border-left: 2px solid #000; border-right: 2px solid #000;">
                    <strong>{{ hotel.hotelName }}</strong>
                </td>
            </tr>
            <tr>
                <td colspan="4" class="company-info-cell" style="border: none; border-left: 2px solid #000; border-right: 2px solid #000;">
                    {{ hotel.address }}, {{ hotel.city }}, {{ hotel.stateProvince }} {{ hotel.country }}
                </td>
            </tr>
            <tr>
                <td colspan="4" class="company-info-cell" style="border: none; border-left: 2px solid #000; border-right: 2px solid #000;">
                    Phone: {{ hotel.phoneNumber }}
                </td>
            </tr>
            <tr>
                <td colspan="4" class="company-info-cell" style="padding-bottom: 6px; border: none; border-left: 2px solid #000; border-right: 2px solid #000;">
                    {{ hotel.website }}, Email : {{ hotel.email }}
                </td>
            </tr>
            <tr>
                <td colspan="4" class="company-info-cell" style="border-top: 2px dotted #000; border-left: 2px solid #000; border-right: 2px solid #000;">
                    <strong>Company:</strong>
                    @if(company)
                        {{ company.companyName }} — {{ company.billingAddressLine }} {{ company.billingCity }} {{ company.billingStateProvince }} {{ company.billingCountry }} | Phone: {{ company.primaryPhone }} | Email: {{ company.primaryEmail }}
                    @else
                        NA
                    @endif
                </td>
            </tr>
            <tr>
                <td style="width: 20%;"><strong>Date</strong></td>
                <td style="width: 30%; border-right: none;">{{ transaction.transactionDate.toFormat('dd-MM-yyyy') }}</td>
                <td style="width: 20%; border-left: none;"><strong>Receipt No.</strong></td>
                <td style="width: 30%;">{{ transaction.transactionNumber }}</td>
            </tr>
            <tr>
                <td><strong>Reg No</strong></td>
                <td colspan="3">{{ hotel.registrationNo1 || 'NA' }}</td>
            </tr>
            <tr>
                <td class="label-cell">Payer (Company)</td>
                <td colspan="3" style="padding: 10px 10px 20px 10px; position: relative;">
                    @if(company)
                        {{ company.companyName }}
                    @else
                        NA
                    @endif
                    <div style="position: absolute; bottom: 0px; left: 50%; transform: translateX(-50%); background: white; padding: 0 10px; font-weight: bold; font-size: 12px; z-index:0; line-height: 1;">Authorization</div>
                </td>
            </tr>
            <tr>
                <td class="label-cell" style="width: 30%; padding-top: 5px;">
                    <div>Amount</div>
                    <div style="margin-top: 5px;">Towards</div>
                </td>
                <td style="width: 70%; padding-top: 5px; position: relative;" colspan="3">
                    <div style="display: flex; align-items: baseline;">
                        <div class="amount" style="margin-right: 10px;">XAF {{ transaction.totalAmount | formatCurrency }}</div>
                        <div style="flex: 1; text-align: center; font-size: 11px; position: relative; top: -4px; white-space: normal; word-break: break-word;">{{ amountInWords }}</div>
                    </div>
                    <div style="margin-top: 5px;">{{ paymentMethod.methodName }}</div>
                </td>
            </tr>
            <tr>
                <td colspan="4" style="padding: 0;">
                    <div class="signature-content">
                        <div class="signature-left">
                            <strong>FOA Signature</strong>
                            <span>{{ printedBy }}</span>
                            <span>{{ printedAt.toFormat('dd-MM-yyyy') }}</span>
                            <span>{{ printedAt.toFormat('HH:mm:ss') }}</span>
                        </div>
                        <div class="signature-right">
                            <strong>Company Signature</strong>
                        </div>
                    </div>
                </td>
            </tr>
        </table>
    </div>

