<!DOCTYPE html>
<html lang="fr">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Reçu de Vente Détaillé</title>
    <style>
        /* Base Styles */
        * {
            box-sizing: border-box;
        }
        
        body {
            font-family: 'Inter', sans-serif;
            background-color: #f7f7f7;
            display: flex;
            justify-content: center;
            align-items: flex-start;
            padding: 40px 20px;
            margin: 0;
            min-height: 100vh;
        }

        .receipt-container {
            width: 100%;
            max-width: 800px;
            background-color: white;
            padding: 0;
            border: 1px solid black;
            box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
            font-size: 0.875rem;
            overflow: hidden; /* Empêche tout débordement */
        }

        .text-sm { font-size: 0.575rem; }
        .text-lg { font-size: 1.125rem; }
        .font-bold { font-weight: 700; }
        .text-center { text-align: center; }
        .text-right { text-align: right; }
        .mb-4 { margin-bottom: 1rem; }
        .mt-4 { margin-top: 1rem; }
        .mt-6 { margin-top: 1.5rem; }
        .px-2 { padding-left: 0.5rem; padding-right: 0.5rem; }
        .pb-1 { padding-bottom: 0.25rem; }
        .border-b { border-bottom: 1px solid black; }

        .header {
            margin-bottom: 1.5rem;
            line-height: 1.4;
            padding: 20px 20px 0 20px;
        }
        .header-title {
            font-size: 1.2rem;
            font-weight: 700;
        }

        .info-section {
            display: flex;
            flex-wrap: wrap; /* Permet le retour à la ligne sur petits écrans */
            border-bottom: 1px solid black;
            border-top: 1px solid black;
            margin-bottom: 0;
            padding: 8px 20px;
        }

        .info-col-left {
            width: 50%;
            display: flex;
            flex-direction: column;
        }

        .info-col-right {
            width: 50%;
            display: flex;
            flex-direction: column;
            padding-left: 10px;
        }

        .info-item {
            display: flex;
            justify-content: flex-start;
            line-height: 1.5;
            word-break: break-word; /* Évite le débordement de texte */
        }

        .info-label {
            font-weight: 800;
            width: 30%;
            min-width: 60px; /* Largeur minimale pour les labels */
        }
        .info-value {
            width: 70%;
            overflow: hidden;
            text-overflow: ellipsis;
        }
        
        .item-table {
        width: 100%;
        margin-top: 0;
        padding: 0;
        padding-bottom: 10px; /* Ajouter un peu d'espace */
        border-bottom: 1px solid black; /* ← Ajoutez cette ligne */
        overflow: hidden;
        }

        .table-header-row {
            display: flex;
            font-weight: 700;
            border-bottom: 1px solid black;
            padding: 5px 20px; /* Padding interne mais la bordure touche les bords */
            margin-bottom: 5px;
        }

        .item-row {
            display: flex;
            padding: 2px 20px; /* Ajout du padding horizontal pour aligner avec le header */
            line-height: 1.4;
        }

        .item-name {
            width: 30%;
            text-align: left;
            overflow: hidden;
            text-overflow: ellipsis;
            white-space: nowrap;
        }
        .item-category {
            width: 25%;
            text-align: left;
            overflow: hidden;
            text-overflow: ellipsis;
            white-space: nowrap;
        }
        .item-qty, .item-unit, .item-amount {
            width: 15%;
            text-align: left;
        }
        .item-amount {
            font-weight: 500;
        }

        .bill-details {
            display: flex;
            flex-direction: column;
            width: 50%;
            margin-left: 50%;
            margin-top: 15px;
            padding-top: 5px;
            padding-right: 20px;
        }

        .total-row {
            display: flex;
            justify-content: space-between;
            line-height: 1.6;
        }

        .total-label {
            text-align: left;
            width: 60%;
            font-weight: 800;
        }

        .total-value {
            text-align: right;
            width: 40%;
        }

        .total-payable {
            font-weight: 700;
            border-top: 1px solid black;
            padding-top: 5px;
            margin-top: 5px;
            font-size: 1rem;
        }
        .total-payable .total-value {
            font-size: 1rem;
        }

        .tax-section {
            border-top: 1px solid black;
            margin-top: 25px;
            padding: 15px 20px 0 20px;
        }

        .tax-header {
            display: flex;
            justify-content: space-between;
            font-weight: 700;
            border-bottom: 1px solid black;
            padding-bottom: 5px;
            margin-bottom: 5px;
        }

        .tax-col-desc { 
            width: 50%; 
            overflow: hidden;
            text-overflow: ellipsis;
        }
        .tax-col-taxable { 
            width: 25%; 
            text-align: right; 
        }
        .tax-col-tax { 
            width: 25%; 
            text-align: right; 
        }

        .tax-data-row {
            display: flex;
            justify-content: space-between;
            padding: 3px 0;
        }
        
        .footer {
            margin-top: 80px;
            text-align: center;
            padding: 0 20px 20px 20px;
        }

        .signature-area {
            display: flex;
            justify-content: space-between;
            margin-top: 50px;
            font-size: 0.8rem;
        }

        .signature-line {
            width: 45%;
            padding-top: 5px;
        }
        
        /* Media queries pour la responsivité */
        @media (max-width: 600px) {
            .info-section {
                flex-direction: column;
            }
            
            .info-col-left, .info-col-right {
                width: 100%;
                padding-left: 0;
            }
            
            .bill-details {
                width: 100%;
                margin-left: 0;
                padding-right: 0;
;
            }
            
            .item-name, .item-category {
                white-space: normal;
                overflow: visible;
            }
        }
    </style>
</head>
<body>
    <div class="receipt-container">
        
        <!-- HEADER (Informations de l'hôtel) -->
        <header class="header text-center text-sm">
            <h1 class="header-title">{{ hotel.hotelName  }}</h1>
            <p>{{ hotel.address}}</p>
            <p>Phone: {{ hotel.phone  }} | Email: {{ hotel.email}}</p>
            @if(hotel.website)
            <p>URL: {{ hotel.website }}</p>
            @endif
        </header>

        <!-- INFORMATIONS DE LA TRANSACTION ET DU CLIENT -->
        <section class="info-section text-sm">
            <div class="info-col-left">
                <div class="info-item">
                    <span class="info-label">Receipt:</span> 
                    <span class="info-value">{{ transaction.transactionNumber || transaction.id }}</span>
                </div>
                <div class="info-item">
                    <span class="info-label">Table:</span> 
                    <span class="info-value">{{ transaction.table || 'N/A' }}</span>
                </div>
                <div class="info-item">
                    <span class="info-label">Guests:</span> 
                    <span class="info-value">{{ guest ? (guest.firstName + ' ' + guest.lastName) : 'Guest' }}</span>
                </div>
                <div class="info-item">
                    <span class="info-label">Room Nos:</span> 
                    <span class="info-value">
                        @if(room && roomType)
                            {{ room.roomNumber }} - {{ roomType.roomTypeName }}
                        @else
                            N/A
                        @endif
                    </span>
                </div>
            </div>
            
            <div class="info-col-right">
                <div class="info-item">
                    <span class="info-label">Date:</span> 
                    <span class="info-value">{{ transaction.createdAt.toFormat('dd-MM-yyyy') }}</span>
                </div>
                <div class="info-item">
                    <span class="info-label">Time:</span> 
                    <span class="info-value">{{ transaction.createdAt.toFormat('HH:mm:ss') }}</span>
                </div>
                 <div class="info-item">
                    <span class="info-label"> Currency:</span> 
                    <span class="info-value">{{ currency }}</span>
                </div>
            </div>
        </section>
        <!-- TABLEAU DES ARTICLES -->
        <section class="item-table text-sm">
            <div class="table-header-row">
                <div class="item-name">Item Name</div>
                <div class="item-category">Category</div>
                <div class="item-qty text-right">Quantity</div>
                <div class="item-unit text-right">Unit Price</div>
                <div class="item-amount text-right">Amount</div>
            </div>

            @if(transaction.itemSummary && transaction.itemSummary.length > 0)
                @each(item in transaction.itemSummary)
                <div class="item-row">
                    <div class="item-name">{{ item.nom }}</div>
                    <div class="item-category">{{ item.categorie || '' }}</div>
                    <div class="item-qty">{{ item.quantite }}</div>
                    <div class="item-unit">{{ formatCurrency(item.prix_unitaire) }}</div>
                    <div class="item-amount">{{ formatCurrency(item.prix_unitaire * item.quantite) }}</div>
                </div>
                @endeach
            @else
                <div class="item-row">
                    <div class="item-name">{{ transaction.description || 'Transaction' }}</div>
                    <div class="item-category">Service</div>
                    <div class="item-qty">1</div>
                    <div class="item-unit">{{ formatCurrency(transaction.amount) }}</div>
                    <div class="item-amount">{{ formatCurrency(transaction.amount) }}</div>
                </div>
            @endif
        </section>

        <!-- SECTION DÉTAILS DE LA FACTURE ET TOTAL -->
        <section class="bill-details text-sm">
            <div class="total-row">
                <div class="total-label">Bill Amount</div>
                <div class="total-value">{{ formatCurrency(transaction.subtotal || transaction.amount) }}</div>
            </div>
            <div class="total-row">
                <div class="total-label">Surcharge</div>
                <div class="total-value">{{ formatCurrency(transaction.surcharge || 0) }}</div>
            </div>
            <div class="total-row">
                <div class="total-label">Tax</div>
                <div class="total-value">{{ formatCurrency(transaction.taxAmount || 0) }}</div>
            </div>
            <div class="total-row">
                <div class="total-label">Discount</div>
                <div class="total-value">{{ formatCurrency(transaction.discount || 0 )}}</div>
            </div>
            <div class="total-row">
                <div class="total-label">Adjustment</div>
                <div class="total-value">{{ formatCurrency(transaction.adjustment || 0) }}</div>
            </div> 
            <div class="total-row">
                <div class="total-label">Payable</div>
                <div class="total-value">{{ formatCurrency(transaction.amount )}} </div>
            </div>
        </section>
        
        <!-- SECTION TVA DÉTAILLÉE -->
        @if(transaction.taxAmount && transaction.taxAmount > 0)
        <section class="tax-section text-sm">
            <div class="tax-header">
                <div class="tax-col-desc">Description</div>
                <div class="tax-col-taxable">Taxable</div>
                <div class="tax-col-tax">Tax</div>
            </div>
            <div class="tax-data-row">
                <div class="tax-col-desc">TVA</div>
                <div class="tax-col-taxable">{{ transaction.subtotal || transaction.amount }}</div>
                <div class="tax-col-tax">{{ transaction.taxAmount }}</div>
            </div>
        </section>
        @endif

        <!-- FOOTER ET SIGNATURES -->
        <footer class="footer">
            <h3 class="font-bold text-center">Thank You</h3>
            <div class="signature-area">
                <div class="signature-line">
                    Guest Signature
                </div>
                <div class="signature-line text-right">
                    Page 1 of 1
                </div>
            </div>
        </footer>

    </div>
</body>
</html>